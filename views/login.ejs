<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ticketac</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css"
      integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="home">

        <div class="container">

        <div class="row">

          <!-- SIGN UP AREA -->
          <div class="col-12 col-sm-3 offset-3 text-center mt-5">

            <div class="formArea">
              <h4 class="titleForm">Sign Up</h4>

              <form action="/sign-up" method="POST">
                <div class="form-group">
                  <label for="exampleInputUsername">Username</label>
                  <input name="usernameFromFront" type="text" class="form-control" placeholder="Enter username">
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Email address</label>
                  <input name="emailFromFront" type="email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email">
                </div>
                <div class="form-group">
                  <label for="exampleInputPassword1">Password</label>
                  <input name="passwordFromFront" type="password" class="form-control"  placeholder="Enter password">
                </div>

                <button type="submit" class="btn btn-info">Submit</button>
              </form>
            </div>

          </div>

          <!-- SIGN IN AREA -->
          <div class="col-12 col-sm-3 text-center mt-5">

            <div class="formArea">

              <h4 class="titleForm">Sign In</h4>

              <form action="/sign-in" method="POST">
                <div class="form-group">
                  <label for="exampleInputEmail1">Email address</label>
                  <input name="emailFromFront" type="email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email">
                </div>
                <div class="form-group">
                  <label for="exampleInputPassword1">Password</label>
                  <input name="passwordFromFront" type="password" class="form-control" placeholder="Enter password">
                </div>

                <button type="submit" class="btn btn-info">Submit</button>
              </form>

            </div>

          </div>

        </div>
      </div>

    </div>
   
  </body>
</html>
